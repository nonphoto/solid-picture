{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": { "~/*": ["./dev/*"] },
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "include": ["./dev/**/*", "./src/**/*"],
  "exclude": ["node_modules"]
}
